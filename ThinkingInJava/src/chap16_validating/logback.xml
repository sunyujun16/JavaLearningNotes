<?xml version="1.0" encoding="UTF-8" ?>
<!-- chap16_validating/logback.xml -->
<configuration>
    <appender name="STDOUT"
              class="ch.qos.logback.core.ConsoleAppender" >
        <encoder>
            <pattern>
                %d{yyyy-MM-dd'T'HH:mm:ss.SSS}
                [%thread] %-5level %logger - %msg%n
            </pattern>
        </encoder>
    </appender>
    <root level="WARN" >
        <appender-ref ref="STDOUT" />
    </root>
</configuration>